<div class="app container-fluid">
    <div class="logInForm">
        <div class="form">
            <h2 class="text-center">ĐĂNG NHẬP THANH TOÁN VAY THÊM CÙNG NHIỀU ƯU ĐÃI HẤP DẪN</h2>
            <form action="/login" class="mt-3" method="POST" class="form" id="form-1">
                <div class="form-group">
                    <label for="sdt" class="fw-semibold">Số điện thoại</label>
                    <input type="text" id="sdt" name="sdt" placeholder="Nhập số điện thoại" required>
                    <span class="form-message"></span>
                </div>
                <div class="form-group">
                    <label for="password" class="fw-semibold mt-3">Mật khẩu*</label>
                    <input type="password" id="password" name="password" placeholder="Nhập mật khẩu" required>
                    <span class="form-message"></span>
                </div>
                {{!-- <div class="form-group">
                    <label for="retypepassword" class="fw-semibold mt-3">Nhập lại mật khẩu*</label>
                    <input type="password" id="retypepassword" name="retypepassword" placeholder="Nhập lại mật khẩu"
                        required>
                    <span class="form-message"></span>
                </div> --}}
            </form>
        </div>
        <div class="button">
            <a href="/">
                <button class="buttonForm btn1">
                    <p>Hủy bỏ</p>
                </button>
            </a>
            <button class="buttonForm btn2" type="submit">
                <p>Đăng nhập</p>
            </button>
        </div>
        <div class="d-flex justify-content-between align-items-center">
            <p>Chưa có tài khoản?<a href="/register">Đăng kí</a> tại đây</p>
        </div>
    </div>
</div>

<script src="/js/validator.js"></script>
<script>
    Validator({
        form: '#form-1',
        formMessage: '.form-message',
        rules: [
            Validator.isSdt('#sdt'),
            //Validator.isEmail('#email'),
            Validator.minLength('#password', 6),
            Validator.isConfirmed("#retypepassword", "Mật khẩu nhập lại không chính xác"),
        ]
    });
</script>