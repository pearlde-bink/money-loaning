<div class="newsDetail">
    <section class="main">
        <div class="header__main newsDetail">
            <div>
                <h3>TIN TỨC</h3>
                <p>Trang chủ / Tin tức</p>
            </div>
        </div>

        <div class="container">
            <div class="row d-flex justify-content-center aligns-items-center flex-wrap rowMain">
                <!-- left -->
                <div class="col-11 col-lg-9 main__left">
                    <!-- left post -->
                    <div class="row d-flex justify-content-center aligns-items-center flex-wrap">
                        <div class="main__post">
                            <div class="main__post--title">
                                <h5>{{newsItem.title}}</h5>
                            </div>
                            <div class="main__post--date">
                                <i class="fa-regular fa-clock"></i>
                                <p>{{newsItem.created}}</p>
                                <div class="main__post--view">
                                    <i class="fa-regular fa-eye"></i>
                                    <p>328</p>
                                </div>
                            </div>
                            <div class="main__post--img">
                                <img src="{{newsItem.img}}" alt="newsImg">
                            </div>
                            <div class="main__post--content">
                                <p>{{newsItem.content}}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- right -->
                <div class="col-11 col-lg-2 main__right">
                    <!-- search -->
                    <nav class="navbar bg-light">
                        <div class="container-fluid">
                            <form class="d-flex main__right--search" role="search">
                                <input class="form-control me-2" type="search" placeholder="Tìm kiếm"
                                    aria-label="Tìm kiếm">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </form>
                        </div>
                    </nav>

                    <!-- right recommen post-->
                    <div class="main__right__content">
                        <h5 class="text-uppercase">Tin nổi bật</h5>
                        <div class="main__right__content--post">
                            <div class="row d-flex justify-content-center aligns-items-center flex-wrap flex-column">
                                <div class="col-12">
                                    <div class="row">
                                        {{#each news}}
                                        <div class="col-12 col-sm-6 col-lg-12 right-post-item">
                                            <div class="right-post-item--img">
                                                <a href="/news/{{this._id}}">
                                                    <img src="{{this.img}}" alt="{{this.title}}">
                                                </a>
                                            </div>
                                            <div class="right-post-item--text">
                                                <p>{{this.title}}</p>
                                            </div>
                                            <div class="right-post-item--date">
                                                <i class="fa-regular fa-clock"></i>
                                                <p>{{this.created}}</p>
                                            </div>
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </section>
</div>